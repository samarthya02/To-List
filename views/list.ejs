<%- include("header"); -%>
    <div class="box" id="heading">
      <h1> <%=kindDay%> </h1>
    </div>
    
    <div class="box">
      <% for(var i = 0 ; i  < newItem.length ; i++){ %> 
        <form method="POST" action="/delete">
          <div class="item">
            <input type="checkbox" name="checkbox" value="<%= newItem[i]._id %>" onchange="this.form.submit()">
            <p><%=newItem[i].name %></p>
          </div>
          <input type="hidden" name="titlename" value="<%=kindDay%>">
        </form>
      <% } %>
      <form action="/" method="POST">
        <input  type="text" name="task" placeholder="New Item" autocomplete="off">
        <button type="submit" name="list" value= "<%=kindDay%>" >+</button>
  
      </form>  
    </div>

<%- include("footer"); -%>
